<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@layout/borders"
    android:id="@+id/secondCollumn"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    
    <TabHost
	android:id="@+id/my_tabhost"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TabWidget
		android:id="@android:id/tabs"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
			
		<FrameLayout
		android:id="@android:id/tabcontent"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			<LinearLayout
			android:id="@+id/content"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			</LinearLayout>
		</FrameLayout>
	</TabHost>
	
    

<RelativeLayout 
    android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip">
       
           <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:padding="5dip"
        android:textSize="28dip"
        android:layout_alignParentLeft="true"
        android:text="Brukerinfo " />
        
         
       <LinearLayout 
              android:layout_width="wrap_content"
        android:layout_height="50dip"
         android:layout_alignParentRight="true"
        >
                            <Button 
        android:id="@+id/button_delete_community"
        android:layout_width="80dip"
        android:layout_height="50dip" 
        android:layout_marginRight="10dip"
        android:text="Slett "></Button>
           
                  <Button 
        android:id="@+id/button_change_community_info"
        android:layout_width="80dip"
        android:layout_height="50dip" 
        android:text="Endre"></Button>

                  </LinearLayout>
                  
    </RelativeLayout>
    

    
        <!--Name--> 
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_marginBottom="7dip">
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_weight="0.7"
        android:padding="5dip"
        android:text="Navn: " />


	 <EditText
	     android:id="@+id/name"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	      android:layout_weight="0.3"
	     android:inputType="textCapWords" >

	 </EditText>
	 
    </LinearLayout>
    

<!--  -->
    <!--Type--> 
    
    
<LinearLayout
    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dip" >
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="5dip"
        android:text="Type gruppe: " />


	 <EditText
	     android:id="@+id/type"
	     android:layout_width="fill_parent"
	     android:layout_weight="0.3"
	     android:layout_height="wrap_content"
	     android:inputType="textCapWords" >

	 </EditText>
    
    
</LinearLayout>

    

    <!--Description--> 
    
    
<LinearLayout
    
    android:layout_width="fill_parent"
     android:layout_marginBottom="7dip"
    android:layout_height="wrap_content" >
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="5dip"
        android:text="Om gruppen: " />


	 <EditText
	     android:id="@+id/description"
	     android:layout_width="fill_parent"
	     android:layout_weight="0.3"
	     android:layout_height="wrap_content"
	     android:inputType="textCapWords" >

	 </EditText>
    
    
    </LinearLayout>


    <!--Om Personen--> 
    
    
<LinearLayout
    
    android:layout_width="fill_parent"
     android:layout_marginBottom="7dip"
    android:layout_height="wrap_content" >
    
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="5dip"
        android:text="Om personen: " />


	 <EditText
	     android:id="@+id/personDescription"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_weight="0.3"
	     android:inputType="textCapWords" >

	 </EditText>


</LinearLayout>

  <!--Telefonnummer--> 
    
    <LinearLayout 
          
    android:layout_width="fill_parent"
     android:layout_marginBottom="7dip"
    android:layout_height="wrap_content" >
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_weight="0.7"
        android:text="Tlf: " />


	 <EditText
	     android:id="@+id/phone"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_weight="0.3"
	     android:inputType="textCapWords" >

	 </EditText>
    
</LinearLayout>
    
<RelativeLayout
       android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="5dip"
	     android:layout_marginBottom="15dip">
  
 
       <Button 
        android:id="@+id/change_community_save"
        android:layout_width="80dip"
        android:layout_height="50dip" 
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/change_community_cancel" 
        android:text="Lagre"
           />
        
        
        <Button 
        android:id="@+id/change_community_cancel"
        android:layout_width="80dip"
        android:layout_height="50dip" 
          android:layout_alignParentRight="true"
        android:text="Avbryt"
           />
    
</RelativeLayout>

    <RelativeLayout 
          android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dip">
      <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:textSize="28dip"
        android:paddingTop="25dip"
        android:padding="5dip"
        android:text="Pårørende" />
      
        <Button 
        android:id="@+id/addPerson"
        android:layout_width="80dip"
        android:layout_height="50dip" 
        android:layout_alignParentRight="true"
        android:text="Legg til "
           />
</RelativeLayout>
    
<ListView
    android:layout_marginLeft="15dip"
    android:background="@layout/borders"
    android:layout_marginRight="15dip"
    android:id="@+id/associateList" 
    android:layout_width="fill_parent"
    android:dividerHeight="2dip" 
    android:divider="#00000000"
    android:layout_height="wrap_content" ></ListView>
    

    
</TableLayout>
